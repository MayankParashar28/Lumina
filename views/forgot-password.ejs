<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header') %>
        <title>Forgot Password - Lumina</title>
        <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <%- include('./partials/nav', { searchQuery: '' }) %>

        <div class="page-container">
            <header class="header text-center mb-4">
                <h1 class="auth-title">Forgot Password?</h1>
                <p class="auth-subtitle">Don't worry, we'll send you reset instructions.</p>
            </header>

            <div class="auth-card">




                <form action="/user/forgot-password" method="POST">
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email"
                            required>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary auth-btn">Send Reset
                            Link</button>
                    </div>
                </form>

                <div class="auth-footer mt-3 text-center">
                    <a href="/user/signin">Back to Sign In</a>
                </div>
            </div>
        </div>

        <%- include('./partials/footer') %>
</body>

</html>